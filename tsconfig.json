{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "preserveConstEnums": true,
        "rootDir": "./src/",
        "outDir": "./",
        "experimentalDecorators": true,
        "newLine": "LF",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": false,
        "sourceMap": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "declaration": true
    },
    "include": [
        "./src/*.ts"
    ],
    "exclude": [
        "./test/*",
        "./node_modules/*"
    ]
}